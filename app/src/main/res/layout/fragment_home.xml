    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListWord"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" />


</LinearLayout>
